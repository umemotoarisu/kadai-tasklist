<%= link_to '新規タスクの投稿', new_task_path %>


<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
<ul>
 <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> : <%= task.status %></li>
  <% end %>
</ul>

<% else %>  
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sing up now!', signup_path, class: 'btn btn-lg btn-promary' %>
    </div>
  </div>
<% end %>



